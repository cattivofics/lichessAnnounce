{
  "manifest_version": 2,

  "name": "Lichess move announce",
  "description": "This extension will announce moves on lichess",
  "version": "0.1",

  "browser_action": {
    "default_icon": "lichess.jpeg",
    "default_popup": "config.html"
  },
  "content_scripts": [
        {
            "matches": [
                "http://*.lichess.org/*",
                "https://*.lichess.org/*"
            ],
            "js": [
                "scripts/jquery-1.12.1.min.js",
                "scripts/bootstrap2-toggle.min.js",
                "scripts/lichess.js",
                "scripts/config.js"
            ],
            "css": [
                "css/bootstrap2-toggle.min.css"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        "sounds/*"
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]

}